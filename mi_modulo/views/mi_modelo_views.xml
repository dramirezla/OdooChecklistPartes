<?xml version="1.0" encoding="utf-8" ?>
<odoo>

        <!-- Menú principal -->
    <menuitem id="menu_mi_modelo_root" name="ProcesamientoPdf" sequence="10" action="action_mi_modelo"/>

    <!-- Submenú para la acción -->
    <menuitem id="action_mi_modelo" 
              name="Lista de Mi Modelo" 
              parent="menu_mi_modelo_root"
              action="action_mi_modelo"/>
    <!-- Vista de formulario -->
    <record id="view_form_mi_modelo" model="ir.ui.view">
        <field name="name">mimodelo3.form</field>
        <field name="model">mimodelo3</field>
        <field name="arch" type="xml">
            <form string="Modelo4">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="archivo_pdf"/>
                        <field name="frecuencia_partes" widget="text"/>
                    </group>
                    <notebook>
                        <page string="Partes Encontradas">
                            <field name="parte_ids">
                                <tree editable="bottom">
                                    <field name="letra"/>
                                    <field name="layout"/>
                                    <field name="seleccionada"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="procesar_pdf" string="Procesar PDF" type="object" class="btn-primary"/>
                    <button name="procesar_partes_seleccionadas" string="Procesar Partes Seleccionadas" type="object" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>


