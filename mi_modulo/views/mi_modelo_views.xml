<odoo>
    <data>
        <record id="view_pdf_processor_form" model="ir.ui.view">
            <field name="name">pdf.processor.form</field>
            <field name="model">pdf.processor</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="pdf_file"/>
                            <field name="extracted_text" widget="text"/>
                            <field name="letter_frequency"/>
                            <field name="image_previews" widget="html"/>
                        </group>
                        <footer>
                            <button name="process_pdf" type="object" string="Procesar PDF" class="btn-primary"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
