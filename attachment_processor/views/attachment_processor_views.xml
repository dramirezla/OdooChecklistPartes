<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_attachment_processor_form" model="ir.ui.view">
        <field name="name">attachment.processor.form</field>
        <field name="model">attachment.processor</field>
        <field name="arch" type="xml">
            <form string="Attachment Processor">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="attachment" filename="attachment_filename"/>
                        <field name="attachment_filename"/>
                    </group>
                    <footer>
                        <button name="process_attachment" type="object" string="Process Attachment" class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_attachment_processor_tree" model="ir.ui.view">
        <field name="name">attachment.processor.tree</field>
        <field name="model">attachment.processor</field>
        <field name="arch" type="xml">
            <tree string="Attachment Processor">
                <field name="name"/>
                <field name="attachment_filename"/>
            </tree>
        </field>
    </record>

    <menuitem id="menu_attachment_processor_root" name="Attachment Processor" sequence="10" action="action_attachment_processor"/>
    <record id="action_attachment_processor" model="ir.actions.act_window">
        <field name="name">Attachment Processor</field>
        <field name="res_model">attachment.processor</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
